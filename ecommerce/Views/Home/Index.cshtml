@using Microsoft.AspNetCore.Identity
@using ecommerce.Models
@using System.Security.Claims;

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    Layout = "_Layout";
}

<head>
    <link href="~/CSS/Home.css" rel="stylesheet" />
</head>

<div id="HomeContent">
    @if (SignInManager.IsSignedIn(User))
    {
        <h3>Hello, @User.Claims.First(c => c.Type == "FullName").Value</h3>
        <p>Welcome to Squirrels with Ties, <br /> the premier marketplace for squirrel inspired merchandise</p>
    }
    else
    {
        <p id="AnonymousUser">Welcome to Squirrels with Ties, <br /> the premier marketplace for squirrel inspired merchandise</p>
    }
</div>
