@model ecommerce.Models.Product

@{
    Layout = "_AdminLayout";
}


<h2>@Model.Name</h2>
<img src="@Model.Image" />
<p>@Model.Description</p>
<p>$@Model.Price</p>
<p>SKU: @Model.Sku</p>
<p><a asp-controller="Product" asp-action="Update" asp-route-id="@Model.ID">Update</a></p>
<p><a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.ID">Delete</a></p>

